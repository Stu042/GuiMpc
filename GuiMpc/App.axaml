<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="GuiMpc.App"
             RequestedThemeVariant="Default">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />

        <Style Selector="Slider:horizontal">
            <Setter Property="MaxHeight" Value="20" />
            <Setter Property="MinWidth" Value="20" />
            <Setter Property="MinHeight" Value="20" />
            <Setter Property="Background" Value="#88440000"/>
            <Setter Property="Foreground" Value="#88880000"/>
            <Setter Property="BorderThickness" Value="4"/>

            <Style Selector="^ Track">
                <Style Selector="^ RepeatButton Border">
                    <Setter Property="CornerRadius" Value="0"/>
                    <Setter Property="Height" Value="4"/>
                </Style>

                <Style Selector="^ Thumb">
                    <Setter Property="Height" Value="10"/>
                    <Setter Property="Width" Value="10"/>
                    <Setter Property="BorderBrush" Value="#ff444444"/>
                    <Setter Property="BorderThickness" Value="1 3 1 3"/>
                    <Setter Property="Foreground" Value="#ff888888"/>
                    <Setter Property="Background" Value="#ff888888"/>
                </Style>
            </Style>
        </Style>

        <Style Selector="Slider:vertical">
            <Setter Property="MaxWidth" Value="20" />
            <Setter Property="MinWidth" Value="20" />
            <Setter Property="MinHeight" Value="20" />
            <Setter Property="Background" Value="#88440000"/>
            <Setter Property="Foreground" Value="#88880000"/>
            <Setter Property="BorderThickness" Value="4"/>

            <Style Selector="^ Track">
                <Style Selector="^ RepeatButton Border">
                    <Setter Property="CornerRadius" Value="0"/>
                    <Setter Property="Width" Value="4"/>
                </Style>

                <Style Selector="^ Thumb">
                    <Setter Property="Height" Value="10"/>
                    <Setter Property="Width" Value="10"/>
                    <Setter Property="BorderBrush" Value="#ff444444"/>
                    <Setter Property="BorderThickness" Value="3 1 3 1"/>
                    <Setter Property="Foreground" Value="#ff888888"/>
                    <Setter Property="Background" Value="#ff888888"/>
                </Style>
            </Style>
        </Style>

        <Style Selector="TextBox">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="LineHeight" Value="12"/>
            <Setter Property="MinHeight" Value="14"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="MaxHeight" Value="12"/>
            <Setter Property="MaxLines" Value="1"/>
            <Setter Property="Background">
                <SolidColorBrush Color="Orange"/>
            </Setter>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BackgroundSizing" Value="1"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Foreground" Value="#ff0000ff"/>
        </Style>

        <Style Selector="ListBoxItem">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="MinHeight" Value="14"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="MaxHeight" Value="12"/>
            <Setter Property="Background">
                <SolidColorBrush Color="Orange"/>
            </Setter>
            <!-- <Setter Property="BorderBrush" Value="#ff220000"/> -->
            <Setter Property="BorderThickness" Value="0 1 1 0"/>
            <Setter Property="BackgroundSizing" Value="1"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Foreground" Value="#ff0000ff"/>
        </Style>

    </Application.Styles>
</Application>