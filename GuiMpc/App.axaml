<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:guiMpc="clr-namespace:GuiMpc"
             x:Class="GuiMpc.App">
    <!-- RequestedThemeVariant="Default" -->
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />

        <Style Selector="StackPanel">
            <Setter Property="Background" Value="#88440000" />
        </Style>


        <Style Selector="Slider">
            <Setter Property="MinWidth" Value="20" />
            <Setter Property="MinHeight" Value="20" />
            <Setter Property="Background" Value="#88440000" />
            <Setter Property="Foreground" Value="#88880000" />
            <Setter Property="BorderThickness" Value="10" />
        </Style>

        <Style Selector="Slider:horizontal">
            <Setter Property="MaxHeight" Value="20" />
            <Style Selector="^ Track">
                <Style Selector="^ RepeatButton Border">
                    <Setter Property="CornerRadius" Value="0" />
                    <Setter Property="Height" Value="4" />
                </Style>

                <Style Selector="^ Thumb">
                    <Setter Property="Height" Value="10" />
                    <Setter Property="Width" Value="10" />
                    <Setter Property="BorderBrush" Value="#ff444444" />
                    <Setter Property="BorderThickness" Value="1 3 1 3" />
                    <Setter Property="Foreground" Value="#ff888888" />
                    <Setter Property="Background" Value="#ff888888" />
                </Style>
            </Style>
        </Style>

        <Style Selector="Slider:vertical">
            <Setter Property="MaxWidth" Value="20" />
            <Setter Property="MinWidth" Value="20" />
            <Setter Property="MinHeight" Value="20" />
            <Setter Property="Background" Value="#88440000" />
            <Setter Property="Foreground" Value="#88880000" />
            <Setter Property="BorderThickness" Value="10" />

            <Style Selector="^ Track">
                <Style Selector="^ RepeatButton Border">
                    <Setter Property="CornerRadius" Value="0" />
                    <Setter Property="Width" Value="4" />
                </Style>

                <Style Selector="^ Thumb">
                    <Setter Property="Height" Value="10" />
                    <Setter Property="Width" Value="10" />
                    <Setter Property="BorderBrush" Value="#ff444444" />
                    <Setter Property="BorderThickness" Value="3 1 3 1" />
                    <Setter Property="Foreground" Value="#ff888888" />
                    <Setter Property="Background" Value="#ff888888" />
                </Style>
            </Style>
        </Style>


        <Style Selector="TextBox">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="LineHeight" Value="12" />
            <Setter Property="MinHeight" Value="14" />
            <Setter Property="Height" Value="14" />
            <Setter Property="MaxLines" Value="1" />
            <Setter Property="Background" Value="#88440000" />
            <Setter Property="BorderBrush" Value="#88440000" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="BackgroundSizing" Value="1" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="Foreground" Value="#ffffffff" />
        </Style>



        <Style Selector="ListBox">
            <Style Selector="^ ListBoxItem">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="MinHeight" Value="16" />
                <Setter Property="Height" Value="16" />
                <Setter Property="MaxHeight" Value="16" />
                <Setter Property="BorderThickness" Value="0 1 1 0" />
                <Setter Property="BackgroundSizing" Value="1" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="Margin" Value="0" />
                <Setter Property="Foreground" Value="#88ffffff" />
                <Setter Property="Background" Value="#88440000" />
            </Style>
            <Style Selector="^ ListBoxItem:selected /template/ ContentPresenter">
                <Setter Property="Background" Value="Transparent" />
            </Style>
        </Style>


        <Style Selector="Image">
            <Setter Property="(guiMpc:GlobalImageOptions.InterpolationMode)" Value="HighQuality" />
        </Style>


    </Application.Styles>
</Application>